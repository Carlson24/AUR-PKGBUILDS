pkgbase=ttf-maplemono-default
pkgname=("ttf-maplemono-default" "ttf-maplemono-default-cn" "ttf-maplemono-default-nf" "ttf-maplemono-default-nf-cn")
pkgver=7.9.2
pkgrel=1
epoch=1
pkgdesc="Maple Mono: Open source monospace font with round corner, ligatures and Nerd-Font for IDE and terminal, fine-grained customization options."
url="https://github.com/Carlson24/maple-font-custom"
arch=("any")
license=('OFL-1.1-RFN')
source=("MapleMonoNR-TTF-v${pkgver}.zip::${url}/releases/download/v${pkgver}/MapleMonoNR-TTF.zip"
        "MapleMonoNR-CN-v${pkgver}.zip::${url}/releases/download/v${pkgver}/MapleMonoNR-CN.zip"
        "MapleMonoNR-NF-v${pkgver}.zip::${url}/releases/download/v${pkgver}/MapleMonoNR-NF.zip"
        "MapleMonoNR-NF-CN-v${pkgver}.zip::${url}/releases/download/v${pkgver}/MapleMonoNR-NF-CN.zip"
        "MapleMonoNLNR-TTF-v${pkgver}.zip::${url}/releases/download/v${pkgver}/MapleMonoNLNR-TTF.zip"
        "MapleMonoNLNR-CN-v${pkgver}.zip::${url}/releases/download/v${pkgver}/MapleMonoNLNR-CN.zip"
        "MapleMonoNLNR-NF-v${pkgver}.zip::${url}/releases/download/v${pkgver}/MapleMonoNLNR-NF.zip"
        "MapleMonoNLNR-NF-CN-v${pkgver}.zip::${url}/releases/download/v${pkgver}/MapleMonoNLNR-NF-CN.zip")
sha256sums=('00a1dea5f5fd305e04129f918c78a309b9d9e792a10c1f0db0cafbc435d4a3dd'
            '9ba24fd1f5c2f9353249667fae845d3100f48df62d3984598a57e99a8a28eaa2'
            '9b077720af2cea036bf48a43e19b6d5ed45b76d6474ae3f334a6fe04c67dcfc8'
            '6f4276ad7ee8f546ba523edb3607dfade3a2d4bd4095e6e69a35bcbf9485b363'
            '9ed202e6c7cafe06f39f69b871d21fe598bccfaa37fa0997d3b5091f69b71b06'
            '67f541a0ee029204b3442b27d1331adab3164dc605770e62b762bb635218e027'
            'b61f8185fc567d952b13405914f020219459926baced15c25056b3b1b9353ab6'
            'fb4aa929787ec6a9928c7d8e92028443990ec729daaf90f1226656c453497341')
noextract=("MapleMonoNR-TTF-v${pkgver}.zip"
           "MapleMonoNR-CN-v${pkgver}.zip"
           "MapleMonoNR-NF-v${pkgver}.zip"
           "MapleMonoNR-NF-CN-v${pkgver}.zip"
           "MapleMonoNLNR-TTF-v${pkgver}.zip"
           "MapleMonoNLNR-CN-v${pkgver}.zip"
           "MapleMonoNLNR-NF-v${pkgver}.zip"
           "MapleMonoNLNR-NF-CN-v${pkgver}.zip")

package_ttf-maplemono-default() {
  unzip -o MapleMonoNR-TTF-v${pkgver}.zip -d MapleMonoNR-TTF
  unzip -o MapleMonoNLNR-TTF-v${pkgver}.zip -d MapleMonoNLNR-TTF
  install -dm 755 "${pkgdir}/usr/share/fonts/maplemono/default"
  install -Dm 644 "${srcdir}/MapleMonoNR-TTF/"*.ttf "${pkgdir}/usr/share/fonts/maplemono/default"
  install -Dm 644 "${srcdir}/MapleMonoNLNR-TTF/"*.ttf "${pkgdir}/usr/share/fonts/maplemono/default"
}

package_ttf-maplemono-default-cn() {
  unzip -o MapleMonoNR-CN-v${pkgver}.zip -d MapleMonoNR-CN
  unzip -o MapleMonoNLNR-CN-v${pkgver}.zip -d MapleMonoNLNR-CN
  install -dm 755 "${pkgdir}/usr/share/fonts/maplemono/default"
  install -Dm 644 "${srcdir}/MapleMonoNR-CN/"*.ttf "${pkgdir}/usr/share/fonts/maplemono/default"
  install -Dm 644 "${srcdir}/MapleMonoNLNR-CN/"*.ttf "${pkgdir}/usr/share/fonts/maplemono/default"
}

package_ttf-maplemono-default-nf() {
  unzip -o MapleMonoNR-NF-v${pkgver}.zip -d MapleMonoNR-NF
  unzip -o MapleMonoNLNR-NF-v${pkgver}.zip -d MapleMonoNLNR-NF
  install -dm 755 "${pkgdir}/usr/share/fonts/maplemono/default-nf"
  install -Dm 644 "${srcdir}/MapleMonoNR-NF/"*.ttf "${pkgdir}/usr/share/fonts/maplemono/default-nf"
  install -Dm 644 "${srcdir}/MapleMonoNLNR-NF/"*.ttf "${pkgdir}/usr/share/fonts/maplemono/default-nf"
}

package_ttf-maplemono-default-nf-cn() {
  unzip -o MapleMonoNR-NF-CN-v${pkgver}.zip -d MapleMonoNR-NF-CN
  unzip -o MapleMonoNLNR-NF-CN-v${pkgver}.zip -d MapleMonoNLNR-NF-CN
  install -dm 755 "${pkgdir}/usr/share/fonts/maplemono/default-nf"
  install -Dm 644 "${srcdir}/MapleMonoNR-NF-CN/"*.ttf "${pkgdir}/usr/share/fonts/maplemono/default-nf"
  install -Dm 644 "${srcdir}/MapleMonoNLNR-NF-CN/"*.ttf "${pkgdir}/usr/share/fonts/maplemono/default-nf"
}
