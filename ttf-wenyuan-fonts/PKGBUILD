# Maintainer: Aubrey Carlson (Carlson) <aubreycarlson24@outlook.com>

pkgbase=wenyuan-fonts
pkgname=("ttf-wenyuan-sans" "ttf-wenyuan-serif" "ttf-wenyuan-rounded")
pkgver=2025.10.3
pkgrel=1
pkgdesc="A more suitable open-source Chinese font collection for Simplified Chinese environment & TeX field. "
url="https://github.com/takushun-wu/WenYuanFonts"
arch=("any")
license=('OFL-1.1-RFN')
source=("WenYuanSansSC-TTF-v${pkgver}.7z::${url}/releases/download/${pkgver}/WenYuanSansSC-TTF.7z"
        "WenYuanSerifSC-TTF-v${pkgver}.7z::${url}/releases/download/${pkgver}/WenYuanSerifSC-TTF.7z"
        "WenYuanRoundedSC-TTF-v${pkgver}.7z::${url}/releases/download/${pkgver}/WenYuanRoundedSC-TTF.7z")
sha256sums=('4c2aae18aad2fd6b3933a0b7aa262428183aeb08eaff1dd110133d7fbc5e42e5'
            '11596b87848b4ce7aecd64a1bfd5332afebfb16f289e4dbb299916c51440360a'
            '16e60ab81e61f92b9074d8db69ed0f265e5da7790372521d4aa8f99dbc5626e0')
noextract=("WenYuanSansSC-TTF-v${pkgver}.7z"
           "WenYuanSerifSC-TTF-v${pkgver}.7z"
           "WenYuanRoundedSC-TTF-v${pkgver}.7z")

package_ttf-wenyuan-sans() {
  7z x -y "WenYuanSansSC-TTF-v${pkgver}.7z" -oWenYuanSansSC
  install -dm 755 "${pkgdir}/usr/share/fonts/wenyuan/sans"
  install -Dm 644 "${srcdir}/WenYuanSansSC/"*.ttf "${pkgdir}/usr/share/fonts/wenyuan/sans"
}

package_ttf-wenyuan-serif() {
  7z x -y "WenYuanSerifSC-TTF-v${pkgver}.7z" -oWenYuanSerifSC
  install -dm 755 "${pkgdir}/usr/share/fonts/wenyuan/serif"
  install -Dm 644 "${srcdir}/WenYuanSerifSC/"*.ttf "${pkgdir}/usr/share/fonts/wenyuan/serif"
}

package_ttf-wenyuan-rounded() {
  7z x -y "WenYuanRoundedSC-TTF-v${pkgver}.7z" -oWenYuanRoundedSC
  install -dm 755 "${pkgdir}/usr/share/fonts/wenyuan/rounded"
  install -Dm 644 "${srcdir}/WenYuanRoundedSC/"*.ttf "${pkgdir}/usr/share/fonts/wenyuan/rounded"
}
