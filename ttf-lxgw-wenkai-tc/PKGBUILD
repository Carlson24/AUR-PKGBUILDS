pkgname=ttf-lxgw-wenkai-tc
pkgver=1.521
pkgrel=1
pkgdesc="The Traditional Chinese Edition of LXGW WenKai."
url="https://github.com/lxgw/LxgwWenKaiTC"
arch=("any")
license=('OFL-1.1-RFN')
source=("${url}/releases/download/v${pkgver}/lxgw-wenkai-tc-v${pkgver}.tar.gz")
sha256sums=('b1e71497dd6c47a0201c3d5a73dea46b806d68c8dd41850f9f354cee382fe67e')

package() {
  install -dm 755 "${pkgdir}/usr/share/fonts/lxgw/wenkai-tc"
  install -Dm 644 "${srcdir}/lxgw-wenkai-tc-v${pkgver}/"*.ttf "${pkgdir}/usr/share/fonts/lxgw/wenkai-tc"
}
