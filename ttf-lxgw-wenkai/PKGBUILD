pkgname=ttf-lxgw-wenkai
pkgver=1.521
pkgrel=1
pkgdesc="An unprofessional open-source Chinese font derived from Fontworks Klee One. "
url="https://github.com/lxgw/LxgwWenKai"
arch=("any")
license=('OFL-1.1-RFN')
source=("${url}/releases/download/v${pkgver}/lxgw-wenkai-v${pkgver}.tar.gz")
sha256sums=('e0658248c97e81dc6710f6bc24fcfb73e6d69b13fb1da6478fe0f4c940ea8157')

package() {
  install -dm 755 "${pkgdir}/usr/share/fonts/lxgw/wenkai"
  install -Dm 644 "${srcdir}/lxgw-wenkai-v${pkgver}/"*.ttf "${pkgdir}/usr/share/fonts/lxgw/wenkai"
}
