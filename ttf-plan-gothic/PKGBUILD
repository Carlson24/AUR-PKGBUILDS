# Maintainer: Aubrey Carlson (Carlson) <aubreycarlson24@outlook.com>

pkgname=ttf-plan-gothic
pkgver=2.9.5792
pkgrel=1
pkgdesc="Plangothic Project is based on Source Han Sans CN and takes the Chinese Mainland variant ideographs as the standard to supplement the CJK Unified Ideographs Extension blocks"
url="https://github.com/Fitzgerald-Porthmouth-Koenigsegg/Plangothic_Project"
arch=("any")
license=('OFL-1.1-RFN')
makedepends=("7zip")
source=("${url}/releases/download/V${pkgver}/Plangothic-OTF-V${pkgver}.7z")
sha256sums=('dff4ca9bbb642c4cace1ed25bf224463bd6dccf1b197bcc5aa0fb15cac60e776')
noextract=("Plangothic-OTF-V${pkgver}.7z")

package() {
  7z x -y "Plangothic-OTF-V${pkgver}.7z"
  install -dm 755 "${pkgdir}/usr/share/fonts/plan-gothic"
  install -Dm 644 "${srcdir}/Plangothic-OTF-V${pkgver}/"*.otf "${pkgdir}/usr/share/fonts/plan-gothic"
}
