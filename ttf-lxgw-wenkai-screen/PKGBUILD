pkgname=ttf-lxgw-wenkai-screen
pkgver=1.521
pkgrel=1
pkgdesc="LXGW WenKai for Screen Reading."
url="https://github.com/lxgw/LxgwWenKai-Screen"
arch=("any")
license=('OFL-1.1-RFN')
source=("LXGWWenKaiScreen-v${pkgver}.ttf::${url}/releases/download/v${pkgver}/LXGWWenKaiScreen.ttf"
        "LXGWWenKaiGBScreen-v${pkgver}.ttf::${url}/releases/download/v${pkgver}/LXGWWenKaiGBScreen.ttf"
        "LXGWWenKaiMonoScreen-v${pkgver}.ttf::${url}/releases/download/v${pkgver}/LXGWWenKaiMonoScreen.ttf"
        "LXGWWenKaiMonoGBScreen-v${pkgver}.ttf::${url}/releases/download/v${pkgver}/LXGWWenKaiMonoGBScreen.ttf")
sha256sums=('eeda8c32620e98c1c91dd197add0f482582e0d326fc7ebca6273c375af4e7419'
            '00a8da2e8d2e26eb23d9d15887d58fbcf66f60ec69eb92b312541fb4ba7da475'
            '2c8b852c52721f063359a0454d6aaf43f1b841a070c56326887474ec0a82bcf1'
            '61f581b3ed47f0d7537421635dc5bae645147ce0d752de7aed778d5418e502ca')

package() {
  install -dm 755 "${pkgdir}/usr/share/fonts/lxgw/wenkai-screen"
  install -Dm 644 "${srcdir}/LXGWWenKaiScreen-v${pkgver}.ttf" "${pkgdir}/usr/share/fonts/lxgw/wenkai-screen/LXGWWenKaiScreen.ttf"
  install -Dm 644 "${srcdir}/LXGWWenKaiGBScreen-v${pkgver}.ttf" "${pkgdir}/usr/share/fonts/lxgw/wenkai-screen/LXGWWenKaiGBScreen.ttf"
  install -Dm 644 "${srcdir}/LXGWWenKaiMonoScreen-v${pkgver}.ttf" "${pkgdir}/usr/share/fonts/lxgw/wenkai-screen/LXGWWenKaiMonoScreen.ttf"
  install -Dm 644 "${srcdir}/LXGWWenKaiMonoGBScreen-v${pkgver}.ttf" "${pkgdir}/usr/share/fonts/lxgw/wenkai-screen/LXGWWenKaiMonoGBScreen.ttf"
}
