# Maintainer: Aubrey Carlson (Carlson) <aubreycarlson24@outlook.com>

pkgname=ttf-lxgw-yozai
pkgver=0.868
pkgrel=1
pkgdesc="A Chinese handwriting font derived from YozFont."
url="https://github.com/lxgw/yozai-font"
arch=("any")
license=('OFL-1.1-RFN')
source=("Yozai-Light-v${pkgver}.ttf::${url}/releases/download/v${pkgver}/Yozai-Light.ttf"
    "Yozai-Medium-v${pkgver}.ttf::${url}/releases/download/v${pkgver}/Yozai-Medium.ttf"
    "Yozai-Regular-v${pkgver}.ttf::${url}/releases/download/v${pkgver}/Yozai-Regular.ttf")
sha256sums=('0efc843308810c04ec394d8af27d0871ada3a9cc4860a226abde88a1bc67b3bd'
            '05f50f252b45197d0d6148a4abc3e37c7cd4cfdf03c955b57c25d53d924f835f'
            '25071998a0fe6a72f54c235e714986d259633e5ff670b1a2b5e264387f3316ac')

package() {
    install -dm 755 "${pkgdir}/usr/share/fonts/lxgw"
    install -Dm 644 "${srcdir}/Yozai-Light-v${pkgver}.ttf" "${pkgdir}/usr/share/fonts/lxgw/Yozai-Light.ttf"
    install -Dm 644 "${srcdir}/Yozai-Medium-v${pkgver}.ttf" "${pkgdir}/usr/share/fonts/lxgw/Yozai-Medium.ttf"
    install -Dm 644 "${srcdir}/Yozai-Regular-v${pkgver}.ttf" "${pkgdir}/usr/share/fonts/lxgw/Yozai-Regular.ttf"
}
